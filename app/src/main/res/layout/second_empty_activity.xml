<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plainText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondEmptyActivity">


    <Button
        android:id="@+id/buttonPreviousActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:text="1st Screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="введи число подписчиков"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNumberField"
        android:layout_width="267dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/editText1"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textInfo"
        app:layout_constraintStart_toStartOf="@+id/textInfo"
        app:layout_constraintTop_toBottomOf="@+id/textInfo" />

    <TextView
        android:id="@+id/textWhoAreYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Отображение успешности"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/inputNumberField"
        app:layout_constraintStart_toStartOf="@+id/inputNumberField"
        app:layout_constraintTop_toBottomOf="@+id/inputNumberField" />

    <Button
        android:id="@+id/acceptNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/button4"
        app:layout_constraintEnd_toEndOf="@+id/inputNumberField"
        app:layout_constraintStart_toStartOf="@+id/inputNumberField"
        app:layout_constraintTop_toBottomOf="@+id/textWhoAreYou" />

    <Button
        android:id="@+id/buttonThirdScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="3d screen"
        app:layout_constraintBottom_toTopOf="@+id/buttonPreviousActivity"
        app:layout_constraintEnd_toEndOf="@+id/buttonPreviousActivity"
        app:layout_constraintStart_toStartOf="@+id/buttonPreviousActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>